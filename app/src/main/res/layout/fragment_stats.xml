<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="statsviewmodel"
            type="fr.isen.emelian.pharma_collect_pro.ui.stats.StatsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stats_and"
                android:textStyle="bold"
                android:fontFamily="@font/baloo"
                android:textSize="35sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/graphs"
                android:fontFamily="@font/baloo"
                android:textStyle="normal"
                android:textSize="30sp"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/visualize"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/select"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/button_pie_user_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_pro_stat"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_four"/>

        <Button
            android:id="@+id/button_pie_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_four"
            android:text="@string/order_stat"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_pie_locker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_four"
            android:text="@string/locker_stat"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/button_barchart_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_four"
            android:text="@string/product_graph_amount"
            android:textColor="@color/white" />

    </LinearLayout>

</layout>