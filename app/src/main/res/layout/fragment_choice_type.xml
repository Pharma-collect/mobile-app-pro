<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.prescription.ChoiceTypeFragment">

    <Button
        android:id="@+id/back_choice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:text="@string/back"
        android:textColor="@color/white"
        app:icon="@drawable/ic_baseline_arrow_back_ios_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/prescription_side"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="40dp"
        android:clickable="true"
        app:cardCornerRadius="30dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/prescription_side_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prescription_side_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/cercle_background_blue"
                android:contentDescription="@string/prescription_logo_pres"
                android:padding="13dp"
                android:src="@drawable/prescription_logo" />

            <TextView
                android:id="@+id/prescription_side_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/prescription"
                android:textColor="#6E6E6E"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/shop_side"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="40dp"
        android:clickable="true"
        app:cardCornerRadius="30dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/shop_side_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_side_iv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/cercle_background_orange"
                android:contentDescription="@string/in_progress_logo_pres"
                android:padding="13dp"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:id="@+id/shop_side_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/shop"
                android:textStyle="bold"
                android:textColor="#6E6E6E"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>